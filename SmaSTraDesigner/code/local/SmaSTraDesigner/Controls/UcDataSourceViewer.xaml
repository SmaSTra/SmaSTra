<local:UcNodeViewer
	x:Class="SmaSTraDesigner.Controls.UcDataSourceViewer"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:SmaSTraDesigner.Controls"
	mc:Ignorable="d"
	x:Name="This" MouseMove="This_MouseMove">
	<Grid Margin="0,0,0,5">
		<Polygon Points="0.0,0.1 0.1,0.0 0.9,0.0 1.0,0.1 1.0,0.9 0.9,1.0 0.1,1.0 0.0,0.9" Fill="LightGreen" Stretch="Fill">
			<Polygon.Style>
				<Style TargetType="Polygon">
					<Setter Property="Stroke" Value="Green" />
					<Setter Property="StrokeThickness" Value="2" />
					<Style.Triggers>
						<DataTrigger Binding="{Binding ElementName=This, Path=IsSelected}" Value="True">
							<Setter Property="Stroke" Value="Black" />
							<Setter Property="StrokeThickness" Value="3" />
						</DataTrigger>
						<DataTrigger Binding="{Binding ElementName=This, Path=IsInSelectionArea}" Value="True">
							<Setter Property="Stroke" Value="DarkBlue" />
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Polygon.Style>
		</Polygon>
		<!--<Polygon Points="0.5,0.0 1.0,0.5 0.5,1.0 0.0,0.5" Stroke="Black" StrokeThickness="2" Fill="LightGreen"  Stretch="Fill" />-->
		<TextBlock Text="{Binding Path=Name}" FontFamily="Lucida Console" FontSize="16" FontWeight="Bold" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" />
		<local:UcIOHandle IsInput="False" DataContext="{Binding ElementName=This, Path=DataContext.OutputType}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,-5" />
	</Grid>
</local:UcNodeViewer>
