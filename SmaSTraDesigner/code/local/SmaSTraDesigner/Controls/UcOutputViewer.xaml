<local:UcNodeViewer
	x:Class="SmaSTraDesigner.Controls.UcOutputViewer"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:SmaSTraDesigner.Controls"
	mc:Ignorable="d"
	x:Name="This" IsHitTestVisible="True">
	<Grid Margin="0,5,0,0">
		<Ellipse Stretch="Fill" Fill="Yellow">
			<Ellipse.Style>
				<Style TargetType="Ellipse">
					<Setter Property="Stroke" Value="#C0C000" />
					<Setter Property="StrokeThickness" Value="2" />
					<Style.Triggers>
						<DataTrigger Binding="{Binding ElementName=This, Path=IsSelected}" Value="True">
							<Setter Property="Stroke" Value="Black" />
							<Setter Property="StrokeThickness" Value="3" />
						</DataTrigger>
						<DataTrigger Binding="{Binding ElementName=This, Path=IsInSelectionArea}" Value="True">
							<Setter Property="Stroke" Value="DarkBlue" />
						</DataTrigger>
					</Style.Triggers>
				</Style>
			</Ellipse.Style>
		</Ellipse>
		<TextBlock Text="Output" FontFamily="Lucida Console" FontSize="20" FontWeight="Bold" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" />
		<local:UcIOHandle IsInput="True" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-5,0,0" DataContext="{x:Null}" />
	</Grid>
</local:UcNodeViewer>
