<Window x:Class="SmaSTraDesigner.Controls.Support.DialogOnlineTransformatins"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmaSTraDesigner.Controls.Support"
        mc:Ignorable="d"
        Title="DialogOnlineTransformatins" Height="300" Width="300">
    <Grid>
        <StackPanel x:Name="tempTestPanelDebugOnly" Visibility="Visible">
            <TextBlock x:Name="tempTestText" Text="{Binding Path=TestString, UpdateSourceTrigger=PropertyChanged}" Margin="0,30,0,0"/>
            <Button x:Name="TestButton" Content="Test" Click="TestButton_Click" />
        </StackPanel>

        <StackPanel>
            <ListView x:Name="listOnlineElements" ItemsSource="{Binding Path=OnlineElementsList}" SelectionChanged="listOnlineElements_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="{Binding Name}" />
                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button x:Name="UpdateButton" Content="Update list" Click="UpdateButton_Click" />

            <StackPanel x:Name="spnElementDetails">
                <WrapPanel>
                    <TextBlock Text="Name: "/>
                    <TextBlock x:Name="tbDetailName" Text="{Binding Path=SelectedClass.Name}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Description: "/>
                    <TextBlock x:Name="tbDetailDescription" Text="{Binding Path=SelectedClass.Description}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Display: "/>
                    <TextBlock x:Name="tbDetailDisplay" Text="{Binding Path=SelectedClass.Display}"/>
                </WrapPanel>
                <StackPanel>
                    <TextBlock x:Name="tbDetailInputs" Text="Inputs:"/>
                    <ItemsControl x:Name="icDetailInputs" ItemsSource="{Binding Path=SelectedClass.Inputs}" Margin="10,0,0,0"/>
                </StackPanel>
                <WrapPanel>
                    <TextBlock Text="Output: "/>
                    <TextBlock x:Name="tbDetailOutput" Text="{Binding Path=SelectedClass.Output}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Type: "/>
                    <TextBlock x:Name="tbDetailType" Text="{Binding Path=SelectedClass.Type}"/>
                </WrapPanel>
            </StackPanel>

            <Button x:Name="btnDownloadElement" Content="Download" Click="btnDownloadElement_Click" >
                <Button.Style>
                        <Style>
                            <Style.Triggers>
                                <DataTrigger 
                     Binding ="{Binding ElementName=listOnlineElements, Path=SelectedIndex}" 
                     Value="-1">
                                    <Setter Property="Button.IsEnabled" Value="false"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
            </Button>

            <Grid x:Name="uploadDropZone" Background="LightGray" Height="50" Margin="0,10,0,0" AllowDrop="True" Drop="uploadDropZone_Drop">
                <TextBlock Text="Upload Drop Zone" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>

            <TextBlock x:Name="tbStatusBar"/>
        </StackPanel>
    </Grid>
</Window>
