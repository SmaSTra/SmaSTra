<Window x:Class="SmaSTraDesigner.Controls.Support.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmaSTraDesigner.Controls.Support"
        mc:Ignorable="d"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"  
        Background="Transparent"
        AllowsTransparency="True"
        Title="SplashWindow" Height="900" Width="900">
    <Grid>
        <Image Stretch="Uniform" Grid.Column="0"  HorizontalAlignment="Left" Margin="5,0,0,5" Source="pack://siteoforigin:,,,/Resources/splashscreen.png"/>
        <TextBlock x:Name="tbVersionNumber" Text="1.0.0" FontSize="27" FontStyle="Normal" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,280,100,0"/>
    </Grid>
</Window>
