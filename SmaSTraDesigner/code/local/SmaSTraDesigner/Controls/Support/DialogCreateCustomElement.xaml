<Window x:Class="SmaSTraDesigner.Controls.Support.DialogCreateCustomElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmaSTraDesigner.Controls.Support"
        mc:Ignorable="d"
        Title="Window1" Height="auto" Width="auto">
    <StackPanel>
        <Grid Height="50"></Grid>
        <TextBlock Text="Enter a name for the new element" TextAlignment="Center" />
        <TextBox x:Name="tboxNewElementName" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
            <ItemsControl Grid.Column="0" ItemsSource="{Binding Path=InputTypesString}" >
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DataTemplate.Resources>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource TextBlockStyle}"/>
                            <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxtyle}"/>
                        </DataTemplate.Resources>
                        <StackPanel Orientation="Vertical" >
                            <WrapPanel>
                                <ComboBox ItemsSource="{Binding Path=AllDataTypes}">
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Path=Name}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox>
                                <TextBox Text="{Binding Path=., UpdateSourceTrigger=PropertyChanged}"  TextWrapping="Wrap" MinWidth="50"/>
                            </WrapPanel>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
                <Button Content="Add" Width="100"/>
            </StackPanel>
            <TextBox Grid.Column="1" Text="{Binding Path=OutputTypeString, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <Button Content="OK" Width="100" />
    </StackPanel>
</Window>
