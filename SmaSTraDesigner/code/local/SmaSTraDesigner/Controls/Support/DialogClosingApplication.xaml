<Window x:Class="SmaSTraDesigner.Controls.Support.DialogClosingApplication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmaSTraDesigner.Controls.Support"
        mc:Ignorable="d"
        Title="DialogClosingApplication" Height="150" Width="200" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Margin="0,40,0,0">
            <TextBlock Text="Do you really want to quit?" HorizontalAlignment="Center" />
            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button x:Name="btnYes" Content="Yes" Click="btnYes_Click" Margin="0,0,20,0"/>
                <Button x:Name="btnNo" Content="No" Click="btnNo_Click" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
