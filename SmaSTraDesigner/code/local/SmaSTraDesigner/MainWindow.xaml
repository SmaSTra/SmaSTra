<Window
	x:Class="SmaSTraDesigner.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:SmaSTraDesigner"
	xmlns:ctrl="clr-namespace:SmaSTraDesigner.Controls"
	mc:Ignorable="d"
	Title="MainWindow" d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Menu x:Name="mnuMain" Grid.ColumnSpan="99" Grid.Row="0" HorizontalAlignment="Stretch">
			<Menu.Items>
				<MenuItem x:Name="mniFile" Header="File">
					<MenuItem.Items>
						<MenuItem x:Name="mniExit" Header="Exit" Click="mniExit_Click" />
					</MenuItem.Items>
				</MenuItem>
			</Menu.Items>
		</Menu>

		<StackPanel Orientation="Horizontal">
			<StackPanel Orientation="Vertical">
				<ToggleButton x:Name="tglDefaultTF" Content="Default Transformations" />
				<ToggleButton x:Name="tglOwnTF" Content="My Transformations" IsEnabled="False" />
				<ToggleButton x:Name="tglOnlineTF" Content="Online Transformations" IsEnabled="False" />
			</StackPanel>
			
		</StackPanel>
		<ctrl:UcTreeDesigner Grid.Row="1" />
	</Grid>
</Window>
